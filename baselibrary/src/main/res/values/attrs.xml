<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScrimInsetsView">
        <attr name="appInsetForeground" format="color|reference" />
        <attr name="appConsumeInsets" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BadgeButton">
        <!-- 徽标文本，为空时显示一个小红点 -->
        <attr name="btnBadgeText" format="string" />
        <!-- 徽标高度，宽度自适应 -->
        <attr name="btnBadgeHeight" format="dimension" />
        <!-- 徽标背景色，默认红色 -->
        <attr name="btnBadgeColorBack" format="color" />
        <!-- 徽标文本色，默认白色 -->
        <attr name="btnBadgeColorText" format="color" />
        <!-- 徽标是否可见 -->
        <attr name="btnBadgeVisible" format="boolean" />
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference" />

    <declare-styleable name="WaitingDots">
        <attr name="dotsColor" format="color" />
        <attr name="period" format="integer" />
        <attr name="jumpHeight" format="integer" />
        <attr name="autoplay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="tr_max_head_height" format="dimension"/>
        <attr name="tr_head_height" format="dimension"/>
        <attr name="tr_max_bottom_height" format="dimension"/>
        <attr name="tr_bottom_height" format="dimension"/>
        <attr name="tr_overscroll_height" format="dimension"/>
        <attr name="tr_enable_refresh" format="boolean"/>
        <attr name="tr_enable_loadmore" format="boolean"/>
        <attr name="tr_pureScrollMode_on" format="boolean"/>
        <attr name="tr_overscroll_top_show" format="boolean"/>
        <attr name="tr_overscroll_bottom_show" format="boolean"/>
        <attr name="tr_enable_overscroll" format="boolean"/>
        <attr name="tr_headerView" format="dimension"/>
        <attr name="tr_bottomView" format="dimension"/>
        <attr name="tr_floatRefresh" format="boolean"/>
        <attr name="tr_autoLoadMore" format="boolean"/>
        <attr name="tr_enable_keepIView" format="boolean"/>
        <attr name="tr_showRefreshingWhenOverScroll" format="boolean"/>
        <attr name="tr_showLoadingWhenOverScroll" format="boolean"/>
    </declare-styleable>

    <!-- FunGameHeader -->
    <declare-styleable name="FunGameHeader">
        <attr name="game_type" format="enum">
            <enum name="hit_block" value="0" />
            <enum name="battle_city" value="1" />
        </attr>

        <attr name="mask_top_text" format="string" />
        <attr name="mask_bottom_text" format="string" />
        <attr name="text_loading" format="string" />
        <attr name="text_loading_finished" format="string" />
        <attr name="text_game_over" format="string" />

        <attr name="top_text_size" format="integer" />
        <attr name="bottom_text_size" format="integer" />
    </declare-styleable>

    <!-- FunGameView -->
    <declare-styleable name="FunGame">
        <attr name="left_model_color" format="color" />
        <attr name="middle_model_color" format="color" />
        <attr name="right_model_color" format="color" />
    </declare-styleable>

    <!-- HitBlockView -->
    <declare-styleable name="HitBlock">
        <attr name="block_horizontal_num" format="integer" />
        <attr name="ball_speed" format="integer">
            <enum name="low" value="3" />
            <enum name="medium" value="6" />
            <enum name="fast" value="9" />
        </attr>
    </declare-styleable>
</resources>