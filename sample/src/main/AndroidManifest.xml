    <application
        android:name=".app.SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".base.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/ThemeMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".base.activity.CustomActivity"
            android:launchMode="singleTask"
            android:theme="@style/ThemeCustom" />
        <activity
            android:name=".base.activity.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash"
            android:theme="@style/FullscreenTheme">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".module.dialog.DemoDialog"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".base.activity.TestActivity"
            android:theme="@style/ThemeCustom" />
        <activity android:name=".module.behavior.BehaviorActivity" />
        <activity android:name=".module.refresh.PhotoActivity" />
    </application>

</manifest>